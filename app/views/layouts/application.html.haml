!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Comp1053
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    
    %nav.navbar.navbar-default
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} Card Sort
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Card Sorts
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Card Sorts', card_sorts_path
                %li
                  = link_to 'New Card Sort', new_card_sort_path
                %li
                  = link_to 'Card Sort Results', card_sort_results_path

            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Authors
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Authors', authors_path
                %li
                  = link_to 'New Authors', new_author_path

            %li.dropdown
              %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                Candidates
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to 'Candidates', card_sort_candidates_path
                %li
                  = link_to 'New Candidate', new_card_sort_candidate_path

    .container
      = yield
